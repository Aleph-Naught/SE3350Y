<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se3350y.aleph.firealertscanner"
    android:versionCode="1"
    android:versionName="1.0"
    android:screenOrientation="portrait" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se3350y.aleph.firealertscanner.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="se3350y.aleph.firealertscanner.MainDataEntry"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dataInput.samplescanner.ScanCodeDemo"
            android:label="@string/app_name"
            android:parentActivityName="se3350y.aleph.firealertscanner.ScanActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se3350y.aleph.firealertscanner.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se3350y.aleph.firealertscanner.MainDataEntry"
            android:label="@string/title_activity_main_data_entry"
            android:parentActivityName="se3350y.aleph.firealertscanner.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se3350y.aleph.firealertscanner.ScanActivity"
            android:label="@string/title_activity_scan"
            android:parentActivityName="se3350y.aleph.firealertscanner.MainDataEntry"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se3350y.aleph.firealertscanner.ClientView"
            android:label="@string/title_activity_client_view"
            android:parentActivityName="se3350y.aleph.firealertscanner.MainDataEntry"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>